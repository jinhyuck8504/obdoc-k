# Production Environment Variables
# Copy this file to .env.local and fill in the actual values

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://obdoc-mvp.netlify.app
NEXT_PUBLIC_APP_NAME="OBDOC - 비만 전문 의료진 매칭 플랫폼"
NEXT_PUBLIC_APP_VERSION=1.0.0

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here

# Database
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret_key_here
NEXTAUTH_URL=https://obdoc-mvp.netlify.app

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here
CSRF_SECRET=your_csrf_secret_here
SESSION_SECRET=your_session_secret_here

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@obdoc.co.kr

# File Upload (Optional)
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
AWS_S3_BUCKET=obdoc-uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-2

# Payment Integration (Optional)
TOSS_CLIENT_KEY=your_toss_client_key
TOSS_SECRET_KEY=your_toss_secret_key
TOSS_WEBHOOK_SECRET=your_toss_webhook_secret

# Monitoring & Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn
SENTRY_ORG=your-org
SENTRY_PROJECT=obdoc-mvp
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# External APIs (Optional)
KAKAO_REST_API_KEY=your_kakao_api_key
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Logging
LOG_LEVEL=info
ENABLE_LOGGING=true

# Feature Flags
ENABLE_COMMUNITY=true
ENABLE_PAYMENTS=false
ENABLE_NOTIFICATIONS=true

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600
